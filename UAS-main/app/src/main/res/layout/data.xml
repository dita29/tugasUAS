<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="107dp"
        android:layout_height="144dp"
        android:src="@drawable/download"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/nama"
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tglPinjam"
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pinjam"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tglKembali"
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pengembalian"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/namaBuku"
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Buku"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/btnHapus"
                android:layout_width="89dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_del"
                android:fontFamily="@font/poppins"
                android:text="selesai"
                android:gravity="center_horizontal"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/btnPerpanjang"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_success"
                android:fontFamily="@font/poppins"
                android:gravity="center_horizontal"
                android:text="perpanjang"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
