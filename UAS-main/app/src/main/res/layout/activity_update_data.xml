<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:hint="masukkan nama peminjam"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Tanggal Peminjaman"
        android:textSize="16sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editTanggalPeminjaman"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Pilih Tanggal Peminjaman"
            android:fontFamily="@font/poppins"
            android:focusable="false"
            android:onClick="showDatePickerPinjam" />
        <Space
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_calendar_month_24"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Tanggal Pengembalian"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editTanggalPengembalian"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:hint="Pilih Tanggal Pengembalian"
            android:focusable="false"
            android:onClick="showDatePicker" />
        <Space
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_calendar_month_24"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Buku"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNamaBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:hint="masukkan nama buku"
        android:inputType="text" />

    <Button
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="update" />

</LinearLayout>
